<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shortcutlibrary.Quiz">

    <LinearLayout
        android:id="@+id/quiz_enterance"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textAlignment="center"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/quiz_enterance_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="80dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_quiz_enterance_image" />

        <TextView
            android:id="@+id/quiz_enterance_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:textAlignment="center"
            android:textSize="20dp"
            android:fontFamily="@font/apple_neo_m"
            android:textColor="#333333"
            android:lineHeight="36dp"
            android:text="제시된 문제를 풀면서\n단축키를 쉽게 익힐 수 있습니다." />

        <TextView
            android:id="@+id/quiz_enterance_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:textSize="30sp"
            android:fontFamily="@font/apple_neo_l"
            android:textColor="#03A9F4"
            android:lineHeight="30dp"
            android:text="퀴즈 풀기!" />

    </LinearLayout>

</FrameLayout>