<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <LinearLayout
        android:id="@+id/list_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/search_border"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:orientation="vertical">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="17dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:id="@+id/shortcut_icon"/>
            <TextView
                android:id="@+id/shortcut_category_hangul"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:textAlignment="center"
                android:fontFamily="@font/apple_neo_l"
                android:singleLine="true"
                android:ellipsize="middle"
                android:text="프로그램"
                android:textSize="12sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/shortcut_commandKeyStr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="50dp"
                    android:ellipsize="middle"
                    android:fontFamily="@font/apple_neo_eb"
                    android:singleLine="true"
                    android:text="단축키 명령어"
                    android:textColor="#000000"
                    android:textSize="24sp" />
                    <ImageView
                        android:id="@+id/shortcut_favoriteIcon"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginStart="-40dp"
                        android:tint="@color/colorFavoriteIconNotSelected"
                        android:tag="false"
                        app:srcCompat="@drawable/ic_star" />
            </LinearLayout>

            <TextView
                android:id="@+id/shortcut_commandString"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/apple_neo_l"
                android:singleLine="true"
                android:ellipsize="middle"
                android:text="단축키 내용"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/shortcut_pk"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:singleLine="true"
                android:visibility="invisible" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>