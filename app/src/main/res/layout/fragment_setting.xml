<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shortcutlibrary.com.hrdkdh.shortcutlibrary.Setting">

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView_setting"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/adView_Setting_adId">
    </com.google.android.gms.ads.AdView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="80dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:textAlignment="center"
            android:fontFamily="@font/apple_neo_m"
            android:textColor="#000000"
            android:textSize="16sp"
            android:text="단축키 사전 검색과 퀴즈에서\n출력할 항목을 선택하세요" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imageViewPowerPoint"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/ic_powerpoint" />
            <Switch
                android:id="@+id/SettingSwitchPowerpoint"
                android:tag="powerpoint"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:switchMinWidth="50dp"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/apple_neo_l"
                android:textSize="22sp"
                android:text="파워포인트" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imageViewExcel"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/ic_excel" />
            <Switch
                android:id="@+id/SettingSwitchExcel"
                android:tag="excel"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:switchMinWidth="50dp"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/apple_neo_l"
                android:textSize="22sp"
                android:text="엑셀" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imageViewWord"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/ic_word" />
            <Switch
                android:id="@+id/SettingSwitchWord"
                android:tag="word"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:switchMinWidth="50dp"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/apple_neo_l"
                android:textSize="22sp"
                android:text="워드" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imageViewHangul"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="2dp"
                android:src="@drawable/ic_hangul" />
            <Switch
                android:id="@+id/SettingSwitchHangul"
                android:tag="hangul"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:switchMinWidth="50dp"
                android:layout_marginStart="14dp"
                android:fontFamily="@font/apple_neo_l"
                android:textSize="22sp"
                android:text="아래아한글" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imageViewChrome"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="2dp"
                android:src="@drawable/ic_chrome" />
            <Switch
                android:id="@+id/SettingSwitchChrome"
                android:tag="chrome"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:switchMinWidth="50dp"
                android:layout_marginStart="14dp"
                android:fontFamily="@font/apple_neo_l"
                android:textSize="22sp"
                android:text="크롬" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imageViewWindows"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="2dp"
                android:src="@drawable/ic_windows" />
            <Switch
                android:id="@+id/SettingSwitchWindows"
                android:tag="windows"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:switchMinWidth="50dp"
                android:layout_marginStart="14dp"
                android:fontFamily="@font/apple_neo_l"
                android:textSize="22sp"
                android:text="윈도우" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>