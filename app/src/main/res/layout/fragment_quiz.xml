<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shortcutlibrary.Quiz">
    <LinearLayout
        android:id="@+id/quiz_entrance_wrap"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textAlignment="center"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/quiz_entrance_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="80dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_quiz_entrance_image"
            android:contentDescription="ic_quiz_entrance_image" />
        <TextView
            android:id="@+id/quiz_entrance_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:textAlignment="center"
            android:textSize="20sp"
            android:fontFamily="@font/apple_neo_m"
            android:textColor="#333333"
            android:lineHeight="36dp"
            android:text="제시된 문제를 풀면서\n단축키를 쉽게 익힐 수 있습니다." />
        <TextView
            android:id="@+id/quiz_entrance_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:textSize="30sp"
            android:fontFamily="@font/apple_neo_l"
            android:textColor="#03A9F4"
            android:clickable="true"
            android:text="퀴즈 풀기!"
            android:focusable="true" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/quiz_main_wrap"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textAlignment="center"
        android:background="#FFFFFF"
        android:orientation="vertical">
        <TextView
            android:id="@+id/quiz_main_question_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:textSize="18sp"
            android:fontFamily="@font/apple_neo_m"
            android:textColor="#333333"
            android:text="1/10"
            android:focusable="true" />
        <TextView
            android:id="@+id/quiz_main_pre_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:textSize="18sp"
            android:fontFamily="@font/apple_neo_m"
            android:textColor="#333333"
            android:text="아래 단축키로 할 수 있는 작업은 무엇일까요?"
            android:focusable="true" />
        <LinearLayout
            android:id="@+id/quiz_question_wrap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:textAlignment="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/quiz_question_icon_wrap"
                android:layout_width="70dp"
                android:layout_height="90dp"
                android:layout_marginTop="20dp"
                android:textAlignment="center"
                android:orientation="vertical"
                tools:ignore="UseCompoundDrawables">
                <ImageView
                    android:id="@+id/quiz_question_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_none"
                    android:contentDescription="quiz_question_icon" />
                <TextView
                    android:id="@+id/quiz_question_icon_category_name"
                    android:layout_width="70dp"
                    android:layout_height="22dp"
                    android:layout_marginTop="8dp"
                    android:textAlignment="center"
                    android:textSize="14sp"
                    android:fontFamily="@font/apple_neo_l"
                    android:textColor="#333333"
                    android:text="none" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/quiz_question_string_wrap"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:layout_marginStart="10dp"
                android:background="#EEEEEE"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/quiz_question_string"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textSize="22sp"
                    android:fontFamily="@font/apple_neo_b"
                    android:textColor="#000000"
                    android:text="문제" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/quiz_option_wrap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginStart="20dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/quiz_option_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:fontFamily="@font/apple_neo_l"
                android:textColor="#000000"
                android:text="답안1" />
            <TextView
                android:id="@+id/quiz_option_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:textSize="18sp"
                android:fontFamily="@font/apple_neo_l"
                android:textColor="#000000"
                android:text="답안2" />
            <TextView
                android:id="@+id/quiz_option_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:textSize="18sp"
                android:fontFamily="@font/apple_neo_l"
                android:textColor="#000000"
                android:text="답안3" />
            <TextView
                android:id="@+id/quiz_option_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:textSize="18sp"
                android:fontFamily="@font/apple_neo_l"
                android:textColor="#000000"
                android:text="답안4" />
            <TextView
                android:id="@+id/quiz_option_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:textSize="18sp"
                android:fontFamily="@font/apple_neo_l"
                android:textColor="#000000"
                android:text="답안5" />
        </LinearLayout>
        <TextView
            android:id="@+id/quiz_end_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textAlignment="center"
            android:textSize="22sp"
            android:fontFamily="@font/apple_neo_l"
            android:textColor="#03A9F4"
            android:clickable="true"
            android:text="퀴즈 끝내기"
            android:focusable="true"  />
    </LinearLayout>
</FrameLayout>